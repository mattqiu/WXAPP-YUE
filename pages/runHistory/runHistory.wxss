@import '../../style/widget/kb-loading/kb-loading.wxss';

page {
  background-color: #f3f4f8;
}

.section {
  width: 100%;
  margin-top: 80rpx;
}

.section:first-child {
  margin-top: 20rpx;
}

.sectionTit {
  text-align: center;
  width: 100%;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.sectionHeader {
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: row;
  background-color: #ccd3e5;
}

.sectionHeader-val {
  text-align: center;
  width: 250rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.cell {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}

.cell-val {
  width: 250rpx;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 26rpx;
}

.noDataTips {
  position: absolute;
  top: 50%;
  left: 50%;
  /*width: 100%;*/
  transform: translate(-50%, -50%);
  text-align: center;
  font-size: 30rpx;
  width: 200rpx;
  height: 200rpx;
}
