.avatarContainer{
    height: 400rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    border: 1rpx solid #e4e4e4;
}

.session {
  height: 120rpx;
  display: flex;
  padding: 40rpx 40rpx;
  box-sizing: border-box;
}

.session-tit {
  font-size: 30rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.session-val {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 400rpx;
  border-bottom: 1rpx solid #999;
}

.myBtn{
   background-color:  #4ec046;
   color: #fff;
   font-size: 26rpx;
   height: 88rpx;
   line-height: 88rpx;
   width: 75%;
   margin-top: 100rpx;
}

page{
  display: flex;
    height: 100%;
    width: 100%;
    flex-direction: column;
}
