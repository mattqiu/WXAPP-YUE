@import '../../style/widget/kb-loading/kb-loading.wxss';

page {
  background-color: #f3f4f8;
}

.section {
  width: 100%;
  margin-top: 80rpx;
}

.section:first-child {
  margin-top: 20rpx;
}

.sectionTit {
  text-align: center;
  width: 100%;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.sectionHeader {
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: row;
  background-color: #ccd3e5;
}

.sectionHeader-val {
  text-align: center;
  width: 250rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.cell {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}

.cell-val {
  width: 250rpx;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 26rpx;
}

.cell-flexVal {
  width: 250rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.sendBtnSpace {
  width: 100%;
  height: 80rpx;
}

.sendBtn {
  position: fixed;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  left: 0;
  bottom: 0;
  font-size: 30rpx;
  background-color: #4ec046;
  color: white;
}



.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 2000;
  color: #fff;
}

.inputWindow {
  position: fixed;
  top: 25%;
  bottom: 36%;
  left: 15%;
  right: 15%;
   width: 70%;
  height: 30%;
  z-index: 6000;
  border-radius: 10rpx;
  background-color: white;
  text-align: center;
}

.inputWindow-tit{
  font-size: 28rpx;
  margin-top: 50rpx;
}

.inputWindow-inputField{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 0 20rpx;
  margin-top: 50rpx;
}


.inputWindow-inputField-tit{
  font-size: 28rpx;
  line-height: 60rpx;

}

.inputWindow-inputField-val{
  width: 300rpx;
  height: 60rpx;
  margin-left: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  box-sizing: border-box;
  text-align: left;
  padding-left: 15rpx;
  font-size: 28rpx;
}

.inputWindow-confirmBtn{

  width: 80%;
  margin-top: 60rpx;
  font-size: 28rpx;
}

.errorTips{
  position: fixed;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  color: white;
  background-color: #e44546;
  left: 0;
  right: 0;
  top: 0;
  z-index: 8000;
}
